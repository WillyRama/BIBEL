<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".FavoritDoaActivity">

    <TextView
        android:id="@+id/txtfavdoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Favorit Doa"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcFavDoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtfavdoa"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txtfavJuzamma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorit Surah"
        android:layout_centerVertical="true"
        android:fontFamily="@font/roboto_slab"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcFavJuzAmma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtfavJuzamma"
        android:layout_marginTop="10dp"/>

</RelativeLayout>