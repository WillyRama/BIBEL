<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetailDoaActivity"
    android:background="@color/bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hidingdoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/bg"
                android:gravity="center_horizontal"
                android:text="Doa"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bismillah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/hidingdoa"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="بِسْمِ ٱللّٰهِ ٱلرَّحْمٰنِ ٱلرَّحِيمِ"/>

            <TextView
                android:id="@+id/doaarab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bismillah"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:text="بِسْمِ ٱللّٰهِ ٱلرَّحْمٰنِ ٱلرَّحِيمِ"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doalatin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doaarab"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:text="wbadjidasndkasndasndsndansdkasndkasdandandasndnasdasnd"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artinya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/doalatin"
                android:textSize="17dp"
                android:text="Artinya : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/arti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/artinya"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:text="wbadjidasndkasndasndsndansdkasndkasdandandasndnasdasnd"
                android:textSize="17dp"
                android:textStyle="bold" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/playdoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="Play"
                android:src="@drawable/suara"
                app:backgroundTint="@color/bg"
                app:elevation="4dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/stopdoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Stop"
                android:src="@drawable/suaramati"
                app:backgroundTint="@color/bg"
                app:elevation="4dp" />

            <ToggleButton
                android:id="@+id/fav"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/hidingdoa"
                android:layout_alignParentRight="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/favori"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textOff=""
                android:textOn="" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>