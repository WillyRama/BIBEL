<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="horizontal"
    tools:context=".HomeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnhijaiyah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/hijaiyah" />

            <ImageButton
                android:id="@+id/btndoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="80dp"
                android:layout_marginRight="38dp"
                android:background="@drawable/doa" />

            <ImageButton
                android:id="@+id/btnjuzamma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnhijaiyah"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/juzamma" />

            <TextView
                android:id="@+id/txthijaiyah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnhijaiyah"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pt_sans_caption"
                android:text="Hijaiyah"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btndoa"
                android:layout_alignParentRight="true"
                android:layout_marginRight="77dp"
                android:layout_marginLeft="110dp"
                android:text="Doa"
                android:fontFamily="@font/pt_sans_caption"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtjuzamma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnjuzamma"
                android:layout_marginLeft="46dp"
                android:text="Juz Amma"
                android:fontFamily="@font/pt_sans_caption"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/BtnFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fav_put"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>